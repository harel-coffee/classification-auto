<launch>

  <node name="track_classifier" pkg="rospix_classification" type="realtime.py" output="screen" respawn="true">

    <!-- select the pipeline -->
    <param name="pipeline_path" value="$(find rospix_classification)/pipelines/vzlusat-1.joblib" />

    <!-- subscribed topics -->
    <remap from="~image_in" to="rospix/sensor_0/image" />

    <!-- published topics -->
    <remap from="~labeled_out" to="~labeled_image" />
    <remap from="~data_out" to="~data" />

  </node>

</launch>
